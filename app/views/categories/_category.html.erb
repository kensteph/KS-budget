<%= link_to category_user_transactions_path(category.id), class:"fs-3 link-dark text-decoration-none" do %>
<section class="d-flex justify-content-between border border-1 mt-3 p-1 bg-card">
<div class="d-flex">
  <img width="80" height="80" src="<%=category.icon%>" alt="Card image cap">
  <div class="d-flex flex-column ms-3">
    <p><%=category.name%></p>
  </div>
</div>
<div class="d-flex justify-content-end fs-5">
  <p>$<%=total%></p>
</div>
</section>
<% end %>